<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleCGFSMobileApp.RegistrationPage"
             Title="Register">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <Label Text="First Name:" FontSize="18"/>
            <Entry x:Name="FirstNameEntry" Placeholder="Enter First Name" />

            <Label Text="Last Name:" FontSize="18"/>
            <Entry x:Name="LastNameEntry" Placeholder="Enter Last Name" />

            <Label Text="Birthdate:" FontSize="18"/>
            <Entry x:Name="BirthdateEntry" Placeholder="MM/DD/YYYY" Keyboard="Text"/>

            <Label Text="Phone Number:" FontSize="18"/>
            <Entry x:Name="PhoneNumberEntry" Placeholder="Enter phone number" Keyboard="Telephone"/>

            <Button
                Text="Register"
                BackgroundColor="#007AFF"
                TextColor="White"
                FontSize="18"
                Padding="10"
                Clicked="OnRegisterClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
